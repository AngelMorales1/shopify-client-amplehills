{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src/",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "compileOnSave": true,
  "include": ["src", "package.d.ts"]
}
